@{
    @model UrunSatis.Models.Urun
    ViewData["Title"] = Model.Baslik;
}
<style>
    .img-baslik {
        width: 100%;
        max-height: 400px; /* Maksimum yükseklik sınırı */
        object-fit: cover; /* Resmin orantısını korur ve kesmeden sığdırır */
    }
</style>
<div class="container">
    <div class="d-flex flex-column">
        <img src="@Model.ResimYolu" alt="Ürün Fotoğrafı" class="img-fluid img-baslik">
        <div class="invoice p-3 mb-3 bg-secondary">
            <div class="row">
                <div class="col-lg-11">
                    <h1>@Model.Baslik</h1>
                    <h5>Fiyat: @Model.Fiyat</h5>
                </div>
                <div class="col-lg-1">
                     <button type="button" class="btn btn-success">Satın Al</button>
                </div>
            </div>
            <hr>
            <div class="row">
                <h5>Ürün Açıklaması:</h5>
            </div>
            <div class="row">
                @Html.Raw(Model.Aciklama)
            </div>
        </div>
    </div>
</div>
